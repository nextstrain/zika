configfile: "defaults/config_zika.yaml"

genes = ['genome', 'ENV', 'CA', 'PRO', 'MP', 'NS1', 'NS2A', 'NS2B', 'NS3', 'NS4A', '2K', 'NS4B', 'NS5']

wildcard_constraints:
    gene = "|".join(genes)

rule all:
    input:
        auspice_json = expand("auspice/zika_{gene}.json", gene=genes)

include: "rules/prepare_sequences.smk"
include: "rules/prepare_gene_sequences.smk"
include: "rules/merge_sequences_usvi.smk"
include: "rules/construct_phylogeny.smk"
include: "rules/annotate_phylogeny.smk"
include: "rules/export.smk"

# Include custom rules defined in the config.
if "custom_rules" in config:
    for rule_file in config["custom_rules"]:

        include: rule_file

rule clean:
    """Removing directories: {params}"""
    params:
        "data/metadata.tsv* ",
        "data/sequences.fasta* ",
        "data/metadata_all.tsv ",
        "data/sequences_all.fasta ",
        "results ",
        "auspice"
    shell:
        "rm -rfv {params}"
